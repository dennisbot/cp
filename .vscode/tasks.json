{
  "tasks": [
    {
      "label": "make",
      "type": "shell",
      "command": "./makefile.sh",
      "args": ["\"${relativeFile}\" \"${workspaceFolder}\""],
      "presentation": {
          "reveal": "always",
          "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "make clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
          "cwd": "${workspaceFolder}"
      },
      "presentation": {
          "reveal": "always",
          "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger.",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run compiled file",
      "type": "shell",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "dependsOn": "C/C++: g++.exe build active file",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "version": "2.0.0"
}
